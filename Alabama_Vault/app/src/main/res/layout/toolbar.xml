    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent">

        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/back"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_toolbarText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/textview_edit"
            android:layout_toRightOf="@+id/imageview_back"
            android:visibility="visible"
            android:gravity="center">


            <TextView
                android:id="@+id/textview_toolbar1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textview_toolbar2"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="VAULT"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <ImageView
                android:id="@+id/imageview_logo"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/textViewA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/toolbar_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name_text"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>


        <!--<RelativeLayout-->
        <!--android:id="@+id/rr_search_close"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_margin="10dp"-->
        <!--android:padding="2dp">-->

        <ImageView
            android:id="@+id/imageview_search"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:src="@drawable/search"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textview_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="EDIT"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="invisible" />

        <!--</RelativeLayout>-->


        <EditText
            android:id="@+id/editText_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="left"
            android:background="@drawable/edittext_bg"
            android:hint="@string/search_text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColorHint="@color/app_light_grey"
            android:textSize="16sp"
            android:visibility="gone" />


    </RelativeLayout>


</android.support.v7.widget.Toolbar>


