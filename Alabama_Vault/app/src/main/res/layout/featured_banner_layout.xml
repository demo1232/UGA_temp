<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_gravity="center_horizontal"
                android:indeterminateDuration="1100"
                android:theme="@style/ProgressBar"
                android:visibility="visible" />


        <ImageView
            android:id="@+id/image_view_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_layout"
        android:background="@color/GrayLight"
        android:paddingBottom="@dimen/activity_top_margin">

        <TextView
            android:id="@+id/textView_featured"
            android:layout_marginStart="@dimen/activity_top_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/featured_cap"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    </LinearLayout>


</RelativeLayout>